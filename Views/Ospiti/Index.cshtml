<link href="~/Style/Ospiti.css" rel="stylesheet" />
@{
    ViewBag.Title = "Nuovo Ospite";
}

@model Albergo.Models.Ospite
<h2 class="font-pers size-font-h2 text-center">Nuovo Ospite</h2>

@if (TempData["Mes"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" rolw="alert">
        @TempData["Mes"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" />
    </div>
}
@if (TempData["MesError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" rolw="alert">
        @TempData["MesError"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" />
    </div>
}

